
@model SimpleGalleryApplication.Models.GalleryIndexModel

@{
  ViewData["Title"] = "Index";
}

<div class="container body-content">
  <div class="row gallery-content">
    @foreach (var image in Model.Images)
    {
      <div class="gallery-image-container drop-shadow">
        <div class="image-detail">
          <a asp-controller="Gallery" asp-action="Detail" asp-route-id="@image.ID">
            <img src="@image.Url" class="gallery-image" alt="@image.Title" />
          </a>
        </div>
      </div>

      <span>@image.Title</span>
      <ul>
        @foreach (var tag in image.ImageTags)
        {
          <li>@tag.Description</li>
        }
      </ul>
    }
  </div>
</div>

