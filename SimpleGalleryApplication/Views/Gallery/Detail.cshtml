@model SimpleGalleryApplication.Models.GalleryDetailModel

@{
    ViewData["Title"] = "Detail";
}

<div class="container body-content">
  <div class="row gallery-image-container-detail drop-shadow">
    <div class="image-detail">
      <img src="@Model.Url" alt="@Model.Title" />
    </div>
  </div>
  <div class="row image-detail-meta">
    <span class="image-Title"> Title: @Model.Title</span>
    <span class="image-Title"> Uploaded: @Model.Created</span>
  </div>
  <div classe="row controls">
    <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
      Back to Gallery
    </a>
  </div>
</div>
